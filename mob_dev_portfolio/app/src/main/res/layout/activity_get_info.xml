<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Description -->
        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Full Name" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_description"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Website -->
        <TextView
            android:id="@+id/text_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Website" />

        <EditText
            android:id="@+id/edit_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_website"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_website"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Phone Number" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_phone"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Location -->
        <TextView
            android:id="@+id/text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_phone"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Location" />

        <EditText
            android:id="@+id/edit_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_location"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Skills -->
        <TextView
            android:id="@+id/text_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_location"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Skills (separated by comma)" />

        <EditText
            android:id="@+id/edit_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_skills"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Email Address -->
        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_skills"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Email Address" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_email"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />






        <!-- Save Button -->
        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_email"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Save" />
    </RelativeLayout>
</ScrollView>

