<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:padding="6dp"> <!-- Adjusted padding -->

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="50dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"

            android:src="@drawable/img" />

        <!-- Share Button (Top Right) -->
        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="45dp"



            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_share" />

        <!-- Name, Skill, Location (Aligned Vertically) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@id/share_button"
            android:layout_toEndOf="@id/profile_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/skill_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill" />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="end"
            android:orientation="horizontal">  <!-- Align elements to the right -->

            <!-- Review Stars -->
            <!-- Yellow stars -->

            <!-- Like Icon -->
            <RatingBar
                android:id="@+id/rbStarReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:progressDrawable="@android:drawable/star_big_on"
                android:rating="3.0"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:stepSize="1.0" />

            <ImageButton
                android:id="@+id/love_button"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:src="@drawable/baseline_favorite_24" />

            <!-- Thumbs-Up Icon -->
            <ImageButton
                android:id="@+id/thumbs_up_button"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="12dp"
                android:src="@android:drawable/ic_menu_manage"
                app:cardCornerRadius="20dp" />  <!-- Example thumbs-up icon -->
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
